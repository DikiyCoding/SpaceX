<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="table_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="tv_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/century_gothic_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="tv_common.tv_title">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_common.tv_value">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/century_gothic_bold</item>
    </style>

    <style name="tv_common.tv_paragraph">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_span">2</item>
    </style>
</resources>